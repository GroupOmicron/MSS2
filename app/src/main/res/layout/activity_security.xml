<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#0066B0"
    tools:context="omicron.mss.SecurityActivity"
    android:id="@+id/">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:id="@+id/answer1"
        android:text="Enter answer"
        android:autoText="false"
        android:background="@drawable/text_box"
        android:editable="true"
        android:textColor="#000000"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/question1"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Spinner
        android:id="@+id/question1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#F47F24"
        android:spinnerMode="dropdown"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:clickable="true" />

    <Spinner
        android:id="@+id/question2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#F47F24"
        android:spinnerMode="dropdown"
        android:layout_marginTop="30dp"
        android:clickable="true"
        android:layout_below="@+id/answer1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:id="@+id/answer2"
        android:layout_marginTop="30dp"
        android:text="Enter answer"
        android:autoText="false"
        android:background="@drawable/text_box"
        android:editable="true"
        android:textColor="#000000"
        android:layout_below="@+id/question2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Spinner
        android:id="@+id/question3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#F47F24"
        android:spinnerMode="dropdown"
        android:layout_marginTop="30dp"
        android:clickable="true"
        android:layout_below="@+id/answer2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:id="@+id/answer3"
        android:text="Enter answer"
        android:autoText="false"
        android:background="@drawable/text_box"
        android:editable="true"
        android:layout_marginTop="30dp"
        android:textColor="#000000"
        android:layout_below="@+id/question3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:id="@+id/button7"
        android:layout_below="@+id/answer3"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
